@model Inmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Contrato</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
           Inquilino
        </dt>
        <dd class = "col-sm-10">
          <a href="">@Model.Inquilino.ToString()</a>
        </dd>
        <dt class = "col-sm-2">
            Inmueble
        </dt>
        <dd class = "col-sm-10">
            <a href="">@Model.Inmueble.Tipo en @Model.Inmueble.Direccion</a>  
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Desde)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Desde)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hasta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hasta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Condiciones)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Condiciones)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new {  id = Model.Id  }) |
    <a asp-action="Index">Volver</a>
</div>
