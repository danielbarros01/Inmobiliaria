@model Inmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Edit";
    var Inquilinos = (IList<Inquilino>)ViewBag.Inquilinos;
    var Inmuebles = (IList<Inmueble>)ViewBag.Inmuebles;
}

<h1>Editar</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desde" class="control-label"></label>
                <input asp-for="Desde" class="form-control" />
                <span asp-validation-for="Desde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hasta" class="control-label"></label>
                <input asp-for="Hasta" class="form-control" />
                <span asp-validation-for="Hasta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Condiciones" class="control-label"></label>
                <input asp-for="Condiciones" class="form-control" />
                <span asp-validation-for="Condiciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Inmueble</label>
                <select class="form-control" name="InmuebleId">
                    @foreach (var item in Inmuebles)
                    {
                          @:<option @(item.Id == Model.InmuebleId ? "selected" : "") value="@item.Id">@(item.ToString())</option>
                    }
                </select>
                <span asp-validation-for="Inmueble" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label">Inquilino</label>
                <select class="form-control" name="InquilinoId">
                    @foreach (var item in Inquilinos)
                    {
                          @:<option @(item.Id == Model.InquilinoId ? "selected" : "") value="@item.Id">@(item.Nombre + " " + item.Apellido)</option>
                    }
                </select>
                <span asp-validation-for="Inquilino" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

