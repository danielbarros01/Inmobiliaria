@model Inmobiliaria.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Rol
        </dt>

        <div class="border-top border-bottom border-info">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.AvatarFile)
            </dt>
            <dd class = "col-sm-10">
                <img src="@Model.AvatarRuta" alt="Imagen" width="100">
            </dd>

            <dt class = "col-sm-2">
                Ruta del archivo
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.AvatarRuta)
            </dd>
        </div>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RolNombre)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Volver</a>
</div>
